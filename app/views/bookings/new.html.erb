<style>
  .new-booking-title {
    font-size: 24px;
    margin-bottom: 20px;
  }

  .form-label {
    font-weight: bold;
    margin-bottom: 5px;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-bottom: 10px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-actions {
    margin-top: 20px;
  }

  .back-button {
    margin-right: 10px;
  }
</style>

<h1 class="new-booking-title">New Booking</h1>

<%= simple_form_for(@booking, url: checkout_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label :date, class: "form-label" %>
    <%= f.input :date, as: :string, input_html: { class: "form-control", type: "date" } %>

    <%= f.label :time, class: "form-label" %>
    <%= f.select :time, options_for_select(time_slots), { include_blank: true }, { class: "form-control" } %>

    <div class="form-group">
      <%= f.label :car_type, class: "form-label" %>
      <%= f.text_field :car_type, value: @instructor.car_type, class: "form-control", readonly: true %>
    </div>

    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :instructor_id, value: @instructor.id %>
  </div>

  <div class="form-actions">
    <%= link_to "Back", instructor_path(@instructor), class: "btn btn-primary" %>
    <%= f.button :submit, "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
  </div>
<% end %>
