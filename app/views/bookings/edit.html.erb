<h1 class="edit-booking-heading">Edit Booking</h1>

<div class="edit-booking-form">
  <%= form_with(model: @booking, url: booking_path(@booking), method: :patch) do |form| %>
    <div class="form-group">
      <%= form.label :date %>
      <%= form.date_field :date, class: "form-control" %>
    </div>

    <%# <div class="form-group">
      <%= form.label :user_id, "User" %>
      <%# <%= form.collection_select :user_id, User.all, :id, :email, { prompt: "Select a user" }, { class: "form-control" } %>
    <%# </div> %>

    <div class="form-group">
      <%= form.label :car_type %>
      <%= form.text_field :car_type, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :time %>
      <%= form.text_field :time, class: "form-control" %>
    </div>


    <div class="form-actions">
      <%= form.submit "Update Booking", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

